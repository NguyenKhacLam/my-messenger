<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_centerVertical="true"
        app:cardCornerRadius="9999dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/userImage"
            android:src="@drawable/girl"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/cardImage"
        android:layout_centerVertical="true"
        android:text="Chats"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/requestNoti"
        android:layout_toLeftOf="@id/editProfile"
        app:cardCornerRadius="9999dp"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/requestBtn"
            android:layout_margin="9dp"
            android:backgroundTint="@color/colorWhite"
            android:src="@drawable/ic_baseline_chat_bubble_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:layout_toEndOf="@id/requestNoti"
        android:layout_marginStart="-10dp"
        app:cardCornerRadius="9999dp"
        android:backgroundTint="@color/colorRed"
        android:layout_width="@dimen/padding_12"
        android:layout_height="@dimen/padding_12"/>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/padding_12"
        android:id="@+id/editProfile"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="9999dp"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/editProfileBtn"
            android:layout_margin="4dp"
            android:backgroundTint="@color/colorWhite"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>