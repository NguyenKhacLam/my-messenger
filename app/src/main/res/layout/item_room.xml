<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_8"
    android:paddingEnd="@dimen/padding_8"
    android:layout_marginBottom="@dimen/padding_16"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="99999dp">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/roomImage"
            android:src="@drawable/girl"
            android:layout_width="@dimen/img_size_md"
            android:layout_height="@dimen/img_size_md"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/cardRoom"
        android:layout_marginStart="@dimen/padding_16"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/roomName"
            style="@style/TitleItemStyle"
            android:text="Qwerty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/roomLastSender"
                android:textSize="16sp"
                android:text="shipper tran duy hung: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/roomLastMessage"
                android:textSize="16sp"
                android:text="Con cac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>